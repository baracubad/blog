<h1>Posts#show</h1>

<p>
  <strong>Post.id:</strong>
  <%= @post.id %>
</p>
<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<p>
  <strong>Likes:</strong>
  <%= @post.likes.count %>
</p>
<p>
  <strong>Comments:</strong>
  <%= @post.comments.count %>
</p>

<%= render partial: "likes/likes", locals: {likeable: @post} %>

<%= render partial: "comments/form", locals: {commentable: @post} %>
<br>
<%= render partial: "comments/comments", locals: {commentable: @post} %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
